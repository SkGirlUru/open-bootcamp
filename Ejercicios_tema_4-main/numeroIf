public class Main {

    public static void main(String[] args) {
        int numeroIf = -7;

        if (numeroIf >= 1) {
            System.out.println("el numero es positvo");

        } else if (numeroIf <= -1) {
            System.out.println("el numero es negativo");

        } else {
            System.out.println("el numero es 0");

        }
    }
}
